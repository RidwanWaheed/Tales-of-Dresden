<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/gold_dark" />
            <solid android:color="@color/gold_dark" />
            <corners
                android:radius="12dp"/>
            <padding android:bottom="5dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/card_dark_background" />
            <solid android:color="@color/card_dark_background" />

            <corners

                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"/>

            <padding android:bottom="1dp"/>
        </shape>
    </item>
</layer-list>