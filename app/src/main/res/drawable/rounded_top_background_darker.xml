<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/gold_dark" />
            <solid android:color="@color/gold_dark" />
            <corners
                android:radius="15dp"/>
            <padding android:top="3dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/card_dark_background" />
            <solid android:color="@color/card_dark_background" />

            <corners

                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"/>

            <padding android:top="1dp"/>
        </shape>
    </item>
</layer-list>